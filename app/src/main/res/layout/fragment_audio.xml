<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.audioSongs.AudioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--for Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/shuffle_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Shuffle"
                android:drawableTop="@drawable/shuffle_icon"
                android:drawableTint="@color/cool_pink"
                android:text="Shuffle"
                android:textAllCaps="false"
                android:textColor="@color/cool_pink"
                android:textStyle="bold" />

            <Button
                android:id="@+id/favorite_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Favorite"
                android:drawableTop="@drawable/favorite_icon"
                android:drawableTint="@color/cool_pink"
                android:text="Favorite"
                android:textAllCaps="false"
                android:textColor="@color/cool_pink"
                android:textStyle="bold" />

            <Button
                android:id="@+id/playlist_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Playlist"
                android:drawableTop="@drawable/playlist_icon"
                android:drawableTint="@color/cool_pink"
                android:text="Playlist"
                android:textAllCaps="false"
                android:textColor="@color/cool_pink"

                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/totalSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:padding="@dimen/_2sdp"
            android:text="total Songs:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/songsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>